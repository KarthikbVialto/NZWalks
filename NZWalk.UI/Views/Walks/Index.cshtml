@model IEnumerable<NZWalk.UI.Models.DTO.WalkDto>
@{
}
<h1 class="mt-3">Walks</h1>
<div class="mt-3 d-flex justify-content-end">
    <a class="btn btn-secondary" type="submit" asp-controller="Walks" asp-action="Add">Add Walk</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>LengthinKm</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Name</td>
                <td>@walk.Description</td>
                <td>@walk.LengthInKm</td>
                <td>
                    <a class="btn btn-light" asp-controller="Walks" asp-action="Edit" 
                    asp-route-id =@walk.Id>Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
